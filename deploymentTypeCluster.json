{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.2.2",
    "parameters": {
        "adminUserName": {
            "metadata": {
                "description": "admin user name for the Virtual Machine."
            },
            "type": "string"
        },
        "adminPassword": {
            "defaultValue": "",
            "metadata": {
                "description": "Password for admin user of the VM"
            },
            "type": "securestring"
        },
        "clusterNodeCount": {
            "defaultValue": 1,
            "metadata": {
                "description": "Number of VM to create"
            },
            "type": "int"
        },
        "clusterVmSize": {
            "metadata": {
                "description": "Size of the VM"
            },
            "type": "string"
        },
        "dnsPrefix": {
            "metadata": {
                "description": "DNS prefix for the VMs. DNS for node would be of form <dnsPrefix>-node0"
            },
            "type": "string"
        },
        "clusterName": {
            "metadata": {
                "description": "Name of the Striim Cluster"
            },
            "type": "string"
        },
        "clusterPassword": {
            "defaultValue": "",
            "metadata": {
                "description": "Password for the Striim cluster"
            },
            "type": "securestring"
        },
        "striimAdminPassword": {
            "defaultvalue": "",
            "metadata": {
                "description": "Password for 'admin' user of Striim."
            },
            "type": "securestring"
        },
        "companyName": {
            "metadata": {
                "description": "Customer Company Name"
            },
            "type": "string"
        },
        "striimProductKey": {
            "metadata": {
                "description": "striim Product Key"
            },
            "type": "string"
        },
        "striimLicenseKey": { 
            "metadata": {
                "description": "Striim License Key"
            },
            "type": "string"
        }
    },
    "variables": {
        "templateApiVersion": "2015-11-01",
        "templateBaseUrl": "https://raw.githubusercontent.com/striim/azure-solution-template/develop/"
    },
    "resources": [
        {
            "name": "master-node",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('templateApiVersion')]",
            "dependsOn": [
                "Microsoft.Resources/deployments/shared-resources"
            ],
            "properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[concat(variables('templateBaseUrl'), '/masterNode.json')]",
					"contentVersion": "1.2.2"
				},
				"parameters": {
                    "adminUserName":{
                        "value":"[parameters('adminUserName')]"
                    },
                    "adminPassword":{
                        "value":"[parameters('adminPassword')]"
                    },
                    "clusterNodeCount":{
                        "value":"[parameters('clusterNodeCount')]"
                    },
                    "clusterVmSize":{
                        "value":"[variables('solutionSize')]"
                    },
                    "dnsPrefix":{
                        "value":"[parameters('dnsPrefix')]"
                    },
                    "clusterName":{
                        "value":"[parameters('clusterName')]"
                    },
                    "clusterPassword":{
                        "value":"[parameters('clusterPassword')]"
                    },
                    "striimAdminPassword":{
                        "value":"[parameters('striimAdminPassword')]"
                    },
                    "companyName":{
                        "value":"[variables('companyName')]"
                    },
                    "striimProductKey":{
                        "value":"[variables('striimProductKey')]"
                    },
                    "striimLicenseKey":{
                        "value":"[variables('striimLicenseKey')]"
                    }
				}
            }
        },
        {
            "name": "worker-nodes",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('templateApiVersion')]",
            "dependsOn": [
                "Microsoft.Resources/deployments/master-node"
            ],
            "properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[concat(variables('templateBaseUrl'), '/workerNodes.json')]",
					"contentVersion": "1.2.2"
				},
				"parameters": {
                    "adminUserName":{
                        "value":"[parameters('adminUserName')]"
                    },
                    "adminPassword":{
                        "value":"[parameters('adminPassword')]"
                    },
                    "clusterNodeCount":{
                        "value":"[parameters('clusterNodeCount'))]"
                    },
                    "clusterVmSize":{
                        "value":"[parameters('clusterVmSize')]"
                    },
                    "dnsPrefix":{
                        "value":"[parameters('dnsPrefix')]"
                    },
                    "clusterName":{
                        "value":"[parameters('clusterName')]"
                    },
                    "clusterPassword":{
                        "value":"[parameters('clusterPassword')]"
                    },
                    "striimAdminPassword":{
                        "value":"[parameters('striimAdminPassword')]"
                    },
                    "companyName":{
                        "value":"[variables('companyName')]"
                    },
                    "striimProductKey":{
                        "value":"[variables('striimProductKey')]"
                    },
                    "striimLicenseKey":{
                        "value":"[variables('striimLicenseKey')]"
                    },
                    "masterNodeFqdn": {
                        "value": "[reference('master-node').outputs.striimMasterNodeFqdn.value]"
                    }
				}
            }
        }
    ],
    "outputs": {
        "serverPublicEndpoint": {
            "type": "string",
            "value": "[concat('http://',parameters('dnsPrefix'),':9080/')]"
        }
    }
}
