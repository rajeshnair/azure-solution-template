{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.2.2",
    "parameters": {
        "adminUserName": {
            "metadata": {
                "description": "admin user name for the Virtual Machine."
            },
            "type": "string"
        },
        "adminPassword": {
            "defaultValue": "",
            "metadata": {
                "description": "Password for admin user of the VM"
            },
            "type": "securestring"
        },
        "clusterNodeCount": {
            "defaultValue": 1,
            "metadata": {
                "description": "Number of VM to create"
            },
            "type": "int"
        },
        "clusterVmSize": {
            "allowedValues": [
                "Standard_DS1_v2",
                "Standard_DS2_v2",
                "Standard_DS3_v2",
                "Standard_DS4_v2",
                "Standard_DS5_v2",
                "Standard_DS11_v2",
                "Standard_DS12_v2",
                "Standard_DS13_v2",
                "Standard_DS14_v2",
                "Standard_DS15_v2"
            ],
            "defaultValue": "Standard_DS3_v2",
            "metadata": {
                "description": "Size of the VM"
            },
            "type": "string"
        },
        "dnsPrefix": {
            "metadata": {
                "description": "DNS prefix for the VMs. DNS for node would be of form <dnsPrefix>-node0"
            },
            "type": "string"
        },
        "clusterName": {
            "metadata": {
                "description": "Name of the Striim Cluster"
            },
            "type": "string"
        },
        "clusterPassword": {
            "defaultValue": "",
            "metadata": {
                "description": "Password for the Striim cluster"
            },
            "type": "securestring"
        },
        "striimAdminPassword": {
            "defaultvalue": "",
            "metadata": {
                "description": "Password for 'admin' user of Striim."
            },
            "type": "securestring"
        }
    },
    "variables": {
        "apiVersion": "2015-06-15",
        "companyName": "AzureCompany",
        "striimProductKey": "",
        "striimLicenseKey": "",
        "templateBaseUrl": "https://raw.githubusercontent.com/striim/azure-solution-template/develop/"
    },
    "resources": [
		{
			"name": "shared-resources",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "[variables('apiVersion')]",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[concat(variables('templateBaseUrl'), '/sharedResources.json')]",
					"contentVersion": "1.2.2"
				},
				"parameters": {
                    "clusterName":{
                        "value":"[parameters('clusterName')]"
                    }
				}
			}
		},
        {
            "name": "master-node",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('apiVersion')]",
            "dependsOn": [
                "Microsoft.Resources/deployments/shared-resources"
            ],
            "properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[concat(variables('templateBaseUrl'), '/masterNode.json')]",
					"contentVersion": "1.2.2"
				},
				"parameters": {
                    "adminUserName":{
                        "value":"[parameters('adminUserName')]"
                    },
                    "adminPassword":{
                        "value":"[parameters('adminPassword')]"
                    },
                    "clusterNodeCount":{
                        "value":"[parameters('clusterNodeCount')]"
                    },
                    "clusterVmSize":{
                        "value":"[parameters('clusterVmSize')]"
                    },
                    "dnsPrefix":{
                        "value":"[parameters('dnsPrefix')]"
                    },
                    "clusterName":{
                        "value":"[parameters('clusterName')]"
                    },
                    "clusterPassword":{
                        "value":"[parameters('clusterPassword')]"
                    },
                    "striimAdminPassword":{
                        "value":"[parameters('striimAdminPassword')]"
                    },
                    "companyName":{
                        "value":"[variables('companyName')]"
                    },
                    "striimProductKey":{
                        "value":"[variables('striimProductKey')]"
                    },
                    "striimLicenseKey":{
                        "value":"[variables('striimLicenseKey')]"
                    }
				}
            }
        },
        {
            "name": "worker-nodes",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('apiVersion')]",
            "dependsOn": [
                "Microsoft.Resources/deployments/master-node"
            ],
            "properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[concat(variables('templateBaseUrl'), '/workerNodes.json')]",
					"contentVersion": "1.2.2"
				},
				"parameters": {
                    "adminUserName":{
                        "value":"[parameters('adminUserName')]"
                    },
                    "adminPassword":{
                        "value":"[parameters('adminPassword')]"
                    },
                    "clusterNodeCount":{
                        "value":"[parameters('clusterNodeCount')]"
                    },
                    "clusterVmSize":{
                        "value":"[parameters('clusterVmSize')]"
                    },
                    "dnsPrefix":{
                        "value":"[parameters('dnsPrefix')]"
                    },
                    "clusterName":{
                        "value":"[parameters('clusterName')]"
                    },
                    "clusterPassword":{
                        "value":"[parameters('clusterPassword')]"
                    },
                    "striimAdminPassword":{
                        "value":"[parameters('striimAdminPassword')]"
                    },
                    "companyName":{
                        "value":"[variables('companyName')]"
                    },
                    "striimProductKey":{
                        "value":"[variables('striimProductKey')]"
                    },
                    "striimLicenseKey":{
                        "value":"[variables('striimLicenseKey')]"
                    }
				}
            }
        }
    ],
    "outputs": {
        "serverPublicEndpoint": {
            "type": "string",
            "value": "[concat('http://',variables('dnsPrefix'),':9080/')]"
        }
    }
}
