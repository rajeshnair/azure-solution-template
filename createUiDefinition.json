{
    "handler": "Microsoft.Compute.MultiVm",
    "version": "0.0.1-preview",
    "parameters": {
        "basics": [
            {
                "name": "vmUsername",
                "type": "Microsoft.Compute.UserNameTextBox",
                "label": "VM user name",
                "defaultValue": "",
                "toolTip": "",
                "constraints": {
                    "required": true
                },
                "osPlatform": "Linux"
            },
            {
                "name": "vmPassword",
                "type": "Microsoft.Common.PasswordBox",
                "label": {
                    "password": "VM user password",
                    "confirmPassword": "Confirm password"
                },
                "toolTip": "",
                "constraints": {
                    "required": true,
                    "regex": "^((?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])|(?=.*[0-9])(?=.*[a-z])(?=.*[!@#$%^&*])|(?=.*[0-9])(?=.*[A-Z])(?=.*[!@#$%^&*])|(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*])).{6,72}$",
                    "validationMessage": "Password must be at least 6 characters long and have 3 out of the following: one number, one lower case, one upper case, or one special character"
                },
                "options": {
                    "hideConfirmation": false
                }
            }
        ],
        "steps": [
            {
                "name": "striimSettings",
                "label": "Striim Cluster Settings",
                "subLabel": {
                    "preValidation": "Configure Striim Cluster",
                    "postValidation": "Done"
                },
                "bladeTitle": "Striim Cluster Settings",
                "elements": [
                    {
                        "name": "solutionSize",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Striim Solution Edition",
                        "toolTip": "Select the right size for your requirement",
                        "defaultValue": "Standard",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "Basic",
                                    "value": "Basic"
                                },
                                {
                                    "label": "Standard",
                                    "value": "Standard"
                                },
                                {
                                    "label": "Enterprise",
                                    "value": "Enterprise"
                                },
                                {
                                    "label": "Premium",
                                    "value": "Premium"
                                }
                            ],
                            "required": true
                        },
                        "visible": "true"
                    },
                    {
                        "name": "deploymentType",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Striim deployment type",
                        "defaultValue": "Single node",
                        "toolTip": "Single node deployment will deploy all Striim components on a single VM, suitable for dev and test. Cluster mode deployment will deploy 1 Cluster Master VM, and desired number of worker VMs", 
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "Single node",
                                    "value": "Standalone"
                                },
                                {
                                    "label": "Cluster",
                                    "value": "Cluster"
                                },
                                {
                                    "label": "Add nodes to existing Cluster",
                                    "value": "ExtendCluster"
                                }
                            ],
                            "required": true
                        }
                    },
                    {
                        "name": "clusterVmCount",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Number of worker nodes in Striim cluster",
                        "defaultValue": "1",
                        "toolTip": "Number of worker nodes in the Striim cluster",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "1",
                                    "value": 1
                                },
                                {
                                    "label": "2",
                                    "value": 2
                                },
                                {
                                    "label": "3",
                                    "value": 3
                                },
                                {
                                    "label": "4",
                                    "value": 4
                                },
                                {
                                    "label": "5",
                                    "value": 5
                                },
                                {
                                    "label": "6",
                                    "value": 6
                                },
                                {
                                    "label": "7",
                                    "value": 7
                                },
                                {
                                    "label": "8",
                                    "value": 8
                                }
                            ]
                        },
                        "visible": "[notequals(steps('striimSettings').deploymentType, 'Standalone')]"
                    },
                    {
                        "name": "striimClusterName",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Name of the Striim Cluster",
                        "defaultValue": "",
                        "toolTip": "Enter a unique logical name for the Striim cluster",
                        "constraints": {
                            "required": true,
                            "regex" : "^[a-z]{3,20}$",
                            "validationMessage": "Use a name between 3 and 20 character long with only lowercase alphabets"
                        }
                    },
                    {
                        "name": "striimClusterPassword",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "Striim Cluster password",
                            "confirmPassword": "Confirm cluster password"
                        },
                        "toolTip": "",
                        "constraints": {
                            "required": true,
                            "regex": "^((?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])|(?=.*[0-9])(?=.*[a-z])(?=.*[!@#$%^&*])|(?=.*[0-9])(?=.*[A-Z])(?=.*[!@#$%^&*])|(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*])).{6,72}$",
                            "validationMessage": "Password must be at least 6 characters long and have 3 out of the following: one number, one lower case, one upper case, or one special character"
                        },
                        "options": {
                            "hideConfirmation": false
                        }
                    }
                ]
            },
            {
                "name": "accessSettings",
                "label": "Striim Access Settings",
                "subLabel": {
                    "preValidation": "Configure how you access the Striim",
                    "postValidation": "Done"
                },
                "bladeTitle": "Striim Access Settings",
                "elements": [
                    {
                        "name": "striimDomainName",
                        "type": "Microsoft.Network.PublicIpAddressCombo",
                        "label": {

                            "domainNameLabel": "Domain name for Striim"
                        },
                        "toolTip": {
                            "domainNameLabel": "Striim will be accessible from this domain"
                        },
                        "defaultValue": {
                            "publicIpAddressName": "striimMasterNodeIP",
                            "domainNameLabel": "change_me_to_be_unique"
                        },
                        "constraints": {
                            "required": {
                                "domainNameLabel": true
                            }
                        },
                        "options": {
                            "hidePublicIpAddressLabel": true,
                            "hideDomainNameLabel": false
                        }
                    },
                    {
                        "name": "striimAdminPassword",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "Striim admin password",
                            "confirmPassword": "Confirm admin password"
                        },
                        "toolTip": "",
                        "constraints": {
                            "required": true,
                            "regex": "^((?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])|(?=.*[0-9])(?=.*[a-z])(?=.*[!@#$%^&*])|(?=.*[0-9])(?=.*[A-Z])(?=.*[!@#$%^&*])|(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*])).{6,72}$",
                            "validationMessage": "Password must be at least 6 characters long and have 3 out of the following: one number, one lower case, one upper case, or one special character"
                        },
                        "options": {
                            "hideConfirmation": false
                        }
                    }
                ]
            }
        ],
        "outputs": {
            "adminUserName": "[basics('vmUsername')]",
            "adminPassword": "[basics('vmPassword')]",
            "dnsPrefix": "[steps('accessSettings').striimDomainName.domainNameLabel]",
            "solutionType": "[steps('striimSettings').solutionSize]",
            "deploymentType": "[steps('striimSettings').deploymentType]",
            "clusterNodeCount": "[steps('striimSettings').clusterVmCount]",
            "clusterName": "[steps('striimSettings').striimClusterName]",
            "clusterPassword": "[steps('striimSettings').striimClusterPassword]",
            "striimAdminPassword": "[steps('accessSettings').striimAdminPassword]"
        }
    }
}
